@model BindingModel.V1._0.User.UserLoginBindingModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pl-2 d-flex justify-content-center">
    <div class="col-4">
    </div>
    <div class="col-4">
        <div class="card  bg-white">
            <div class="card-header text-center">
                <h4>  Login </h4>
            </div>
            <form id="formLoginUser" asp-area="Authentication"
                  asp-controller="Auth" asp-action="LoginUser"
                  method="post" data-ajax="true"
                  data-ajax-success="authController.loginUserOnSuccess"
                  data-ajax-failure="authController.loginUserOnfailure"
                  data-ajax-begin="authController.loginUserOnBegin"
                  data-ajax-complete="authController.loginUserOnComplete">
                <div class="card-body pl-3 pr-3 pt-3">

                    <div id="ajaxLoginUserResult">

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">

                                    <label asp-for="UserName"></label>
                                    <input type="text" asp-for="UserName"
                                           class="form-control" id="txtUserName"
                                           placeholder="Enter User Name">
                                    <span asp-validation-for="UserName" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="Password" asp-for="Password"
                                           class="form-control" id="txtPassword"
                                           placeholder="Enter Password">
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i>Login
                    </button>
                    <button type="button" class="ml-3 btn btn-secondary"
                            onclick="homeController.RedirectToUrl('Register')">
                        <i class="fas fa-user-plus"></i>I'm New User
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-4">
    </div>
</div>

<script src="~/jsControllers/admin/authController.js"></script>

<script>
    $("#nav-ItemLogin").addClass("active");
</script>