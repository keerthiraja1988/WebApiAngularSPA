@page "/ErrorPage"

@using Microsoft.JSInterop

@inject IJSRuntime _jsRuntime

<div class="row">

    <div class="col-md-12">
        <div class="text-center">
            <h1 class="display-1" style=" color: #e21212; font-size:larger;font-size: 165px;">
                <i class="fas fa-frown"></i>
            </h1>

            <h1 class="display-3">
                Oops!
            </h1>
            <div class="pt-3 pb-2" style="font-size: 20px;">
                An error occurred while processing your request.
            </div>

            <div class="error-actions pt-4">

                <a href="\" class="btn btn-primary btn-lg" onclick="homeController.ShowLoadingIndicator()">
                    <i class="fas fa-home"></i>
                    Take Me Home
                </a>

                <a href="mailto:companyappSupport@email.com?Subject=Error%20Occured%20In%20-%20BlazorApp%20" target="_top" class="btn btn-primary btn-lg ml-5">
                    <i class="fas fa-envelope"></i>
                    Email To Support
                </a>
            </div>
        </div>
    </div>
</div>

@functions {

    protected override async Task OnInitAsync()
    {
        await this._jsRuntime.InvokeAsync<object>("homeController.navActiveColorChange", "nav-ItemSamples");
        await this._jsRuntime.InvokeAsync<object>("homeController.HideLoadingIndicator");
    }
}