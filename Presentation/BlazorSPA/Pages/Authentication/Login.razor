@page "/Login"
@inherits LoginBase

@using BindingModelSPA.User

<div class="row pl-2 d-flex justify-content-center">
    <div class="col-4">
    </div>
    <div class="col-4">
        <div class="card  bg-white">
            <div class="card-header text-center">
                <h4>  Login </h4>
            </div>
            <div class="card-body pl-3 pr-3 pt-3">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="FullName" class="control-label">User Name</label>
                            <input for="FullName" class="form-control" bind="login.UserName" />
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" class="control-label">Password</label>
                            <input asp-for="LastName" class="form-control" bind="login.Password" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer text-center">
                <button type="button" class="btn btn-primary"
                        onclick="@(async () => await this.Login(login))">
                    <i class="fas fa-sign-in-alt pr-2"></i>  Login
                </button>
                <button type="button" class="ml-3 btn btn-secondary">
                    <i class="fas fa-user-plus pr-2"></i>I'm New User
                </button>
            </div>
        </div>
    </div>
    <div class="col-4">
    </div>
</div>

@functions {
    UserLoginBindingModel login = new UserLoginBindingModel();

    protected override async Task OnInitAsync()
    {
        await this.LoginOnLoad();
    }
}